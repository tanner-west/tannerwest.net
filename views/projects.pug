doctype html
include doc-head.pug
  link(href='css/projects-style.css' rel='stylesheet')
    
  -var projectList = [{"title": "Hipset", "desc": "A blog showcasing my unique talent", "img": "images/hipset.jpg", "url": "https://google.com", "repo": "https://github.com/tanner-west/hipster-blog"}, {"title": "Moo Cow Lounge", "desc": "A website for making money", "img": "images/moo-cow.jpg", "url": "https://google.com"}, {"title": "Fake App", "desc": "One person's dream app", "url": "https://google.com"}, {"desc": "A website for making money", "img": "images/moo-cow.jpg", "url": "https://google.com"}, {"desc": "A blog showcasing my unique talent", "img": "images/hipset.jpg", "url": "https://google.com", "repo": "https://github.com/tanner-west/hipster-blog"}, {"desc": "One person's dream app", "url": "https://google.com"} ] 

  mixin projects(projects)
   each project in projects
    div.col-md-4
      div.flip-container.flip-container-desktop
        div.flipper
          div.front(style="background-image: url(" + project.img + ");")
          div.back
            div#inlay
              h2= project.title
              p= project.desc
              a(href= project.url)
                div#visit
                  p.text-center go
              a(href= project.repo)
                div#github
body
 div.container 
  include header.pug
  div.row#top-row
    div.col-md-12
       h1.text-center
        span#title-heading Projects
  div#projects
    div.row
     div.col-md-12
      +projects(projectList)
script(src='js/headerscroller.js')
script(src='js/project-flipper.js')


  
