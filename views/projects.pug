  mixin projects(projects)
   each project in projects
    div.col-md-4
      div.flip-container.flip-container-desktop
        div.flipper
          div.front(style="background-image: url(" + project.acf.image + ");")
            span.project-label= project.title.rendered
          div.back
            div#inlay
              a(href= project.url)
                h2= project.title.rendered
              p!= project.content.rendered
              if project.acf.url
                a(href= project.acf.url)
                  div#visit
                    span.text-center.go GO!
              if project.acf.repo    
                a(href= project.acf.repo)
                  div#github
              if project.acf.why
                a(href= project.acf.why)
                  div#why
                    span.text-center.why-text WHY?
body
 include header.pug
 div.container 
  
  div.row#top-row
